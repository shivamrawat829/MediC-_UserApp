<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundrealone"
    android:elevation="16dp"
    tools:context="com.example.shubhamr.health.MainActivity">


    <TextView
        android:id="@+id/logoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"

        android:elevation="16dp"
        android:text="Smart Health Care"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/logintextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="login"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_above="@+id/textInputLayout"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="24dp"
            android:textColorHint="@android:color/black">


            <EditText


                android:id="@+id/aadhaar_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textInputLayout"
                android:layout_alignStart="@+id/logoname"
                android:layout_marginBottom="22dp"

                android:ems="10"
                android:hint="Aadhaar No"
                android:inputType="text"
                android:padding="15dp"
                android:textColorHint="@android:color/black" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_above="@+id/textInputLayout"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="24dp"
            android:textColorHint="@android:color/black">


            <EditText


                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textInputLayout"
                android:layout_alignStart="@+id/logoname"
                android:layout_marginBottom="22dp"

                android:ems="10"
                android:hint="Password"
                android:inputType="textWebPassword"
                android:padding="15dp"
                android:textColorHint="@android:color/black" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reg_txt"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp"
        android:background="@android:color/holo_blue_dark"
        android:singleLine="true"
        android:text="SIGN IN"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/reg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:text="New User? Register Now"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="427dp" />





</RelativeLayout>
