<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundrealone"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shubhamr.health.Register"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.13"
        android:text="ST MediC"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/regname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint="Name"
                android:inputType="none"
                android:padding="15dp"
                android:textColorHint="?attr/colorButtonNormal" />


            <EditText
                android:id="@+id/aadhaar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint="Aadhaar No"
                android:inputType="none"
                android:padding="15dp"
                android:textColorHint="?attr/colorButtonNormal" />


            <EditText
                android:id="@+id/Age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint="Age"
                android:inputType="none"
                android:padding="15dp"
                android:textColorHint="?attr/colorButtonNormal" />


            <EditText
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint="Contact No"
                android:inputType="none"
                android:padding="15dp"
                android:textColorHint="?attr/colorButtonNormal" />


            <EditText
                android:id="@+id/emercontname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint="Emergency Contact Name"
                android:inputType="none"
                android:padding="15dp"
                android:textColorHint="?attr/colorButtonNormal" />

            <EditText
                android:id="@+id/emegcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint="Emergency Contact No"
                android:inputType="none"
                android:padding="15dp"
                android:textColorHint="?attr/colorButtonNormal" />


            <EditText
                android:id="@+id/bloodgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint="Blood Group"
                android:inputType="none"
                android:padding="15dp"
                android:textColorHint="?attr/colorButtonNormal" />

            <EditText
                android:id="@+id/regpass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint="Password"
                android:inputType="none"
                android:padding="15dp"
                android:textColorHint="?attr/colorButtonNormal" />

            <EditText
                android:id="@+id/regpass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="none"
                android:padding="15dp"
                android:textColorHint="?attr/colorButtonNormal" />

            <Button
                android:id="@+id/regbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout3"
                android:background="@android:color/holo_blue_dark"
                android:singleLine="true"
                android:text="Register"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />


        </LinearLayout>
</ScrollView>


</RelativeLayout>

